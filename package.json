    "@rollup/plugin-node-resolve": "^13.0.6",
    "@tivac/eslint-config": "^2.4.0",
    "babel-jest": "^27.0.2",
    "babel-plugin-add-module-exports": "^1.0.2",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.1.1",
    "dedent": "^0.7.0",
    "eslint": "^8.3.0",
    "esm": "^3.2.25",
    "jest": "^27.0.3",
    "object-inspect": "^1.11.0",
